<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0.4" client="site" method="upgrade">
    <name>Contact Display</name>
    <author>Liam Hanks</author>
    <version>1.0.4</version>
    <description>A module for displaying contact information.</description>
    <files>
        <filename>mod_contact_display.xml</filename>
        <filename module="mod_contact_display">mod_contact_display.php</filename>
        <filename>helper.php</filename>
		<folder>tmpl</folder>
        <filename>tmpl/default.php</filename>
    </files>
	<languages folder="/language">
	   <language tag="en-GB">en-GB/en-GB.mod_contact_display.ini</language>
	   <language tag="en-GB">en-GB/en-GB.mod_contact_display.sys.ini</language>
	</languages>
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field
					   name="name"
					   type="sql"
					   default="1"
					   label="MOD_CONTACT_DISPLAY_SELECT_CONTACT"
					   key_field="id"
					   query="SELECT id,name AS value,name FROM #__contact_details"
				/>
				<field
					name="showName"
					type="radio"
					label="MOD_CONTACT_DISPLAY_SHOW_NAME"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="showAlias"
					type="radio"
					label="MOD_CONTACT_DISPLAY_SHOW_ALIAS"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="showCon_position"
					type="radio"
					label="MOD_CONTACT_DISPLAY_SHOW_POSITION"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="showImage"
					type="radio"
					label="MOD_CONTACT_DISPLAY_SHOW_IMAGE"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="MOD_CONTACT_DISPLAY_OPTIONS">
				<field name="display" label="MOD_CONTACT_DISPLAY_LABELS" type="checkboxes">
					<option value="name">Name</option>
					<option value="alias">Alias</option>
					<option value="con_position">Position</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="classSfx" type="text" default="" label="Module Class Suffix" description="" size="100" />
			</fieldset>
		</fields>
    </config>
</extension>